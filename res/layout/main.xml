<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btnAddFragm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="add fragment 1">
        </Button>
        <Button
                android:id="@+id/btnAddFragm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="add fragment 2">
        </Button>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btnDelFragm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="del fragment 1">
        </Button>
        <Button
                android:id="@+id/btnDelFragm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="del fragment 2">
        </Button>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/frgmCont1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#25383C"
            android:layout_weight="1">
    </FrameLayout>
    <FrameLayout
            android:id="@+id/frgmCont2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#25383C"
            android:layout_weight="1">
    </FrameLayout>
</LinearLayout>

